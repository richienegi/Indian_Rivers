<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.r.indian_rivers">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".util.MyApplication"
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">

        <activity
            android:name=".views.activity.DetailPage"
            android:screenOrientation="portrait" />
        <activity
            android:name=".views.activity.Himalayan"
            android:screenOrientation="portrait" />
        <activity
            android:name=".views.activity.River_System"
            android:screenOrientation="portrait" />
        <activity
            android:name=".views.activity.Suggestions"
            android:screenOrientation="portrait" />
        <activity
            android:name=".views.activity.MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".views.activity.Questions"
            android:screenOrientation="portrait" />
        <activity
            android:name=".views.activity.AnswerSheet"
            android:screenOrientation="portrait" />
        <activity
            android:name=".views.activity.Map"
            android:screenOrientation="portrait" />
        <activity
            android:name=".views.activity.MainOption"
            android:screenOrientation="portrait" />

        <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value=".views.activity.MainActivity" />
        <meta-data
            android:name="com.google.android.gms.ads.AD_MANAGER_APP"
            android:value="true" />

        <activity
            android:name=".views.activity.DetailActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".views.activity.SplashScreen"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>